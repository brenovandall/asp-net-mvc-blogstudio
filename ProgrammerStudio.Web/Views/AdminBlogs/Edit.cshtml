@model ProgrammerStudio.Web.Models.ViewModels.EditBlogModel
@{
}

<div class="container">
    <div>
        <h1 class="text-dark fs-1">Edit The Post - Adminstrator</h1>
    </div>
    <div>
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Type the heading</label>
                <input type="text" class="form-control" id="heading" asp-for="@Model.Heading">
            </div>
            <div class="mb-3">
                <label class="form-label">Title of the post</label>
                <input type="text" class="form-control" id="title" asp-for="@Model.Title">
            </div>
            <div class="mb-3">
                <label class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="@Model.Content"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" id="description" asp-for="@Model.Description">
            </div>
            <div class="mb-3">
                <label class="form-label">Select the Thumbnail Image</label>
                <input type="file" class="form-control" id="thumbnailImage">
                @if(Model.ImageUrl != null)
                {
                    <img id="imageDisplay" src="@Model.ImageUrl" style="display:block; width:400px;margin-top:10px" />
                } else
                {
                    <img id="imageDisplay" src="" style="display:none; width:400px;margin-top:10px" class="mt-1" />
                }
            </div>
            <div class="mb-3">
                <label class="form-label">Image URL</label>
                <input type="url" class="form-control" id="image" asp-for="@Model.ImageUrl">
            </div>
            <div class="mb-3">
                <label class="form-label">URL Handle</label>
                <input type="text" class="form-control" id="url" asp-for="@Model.UrlHandle">
            </div>
            <div class="mb-3">
                <label class="form-label">Date of publish</label>
                <input type="date" class="form-control" id="date" asp-for="@Model.PublishDate">
            </div>
            <div class="mb-3">
                <label class="form-label">Author of the post</label>
                <input type="text" class="form-control" id="author" asp-for="@Model.Author">
            </div>
            <div class="mb-3">
                <label class="form-label">Tags for this posts</label>
                <select class="form-select" asp-items="@Model.Tags" asp-for="SelectedTags">
                </select>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label">
                    The post would be visible? If will be, check this field.
                </label>
            </div>
            <button type="submit" class="btn btn-primary" asp-area="" asp-controller="AdminBlogs" asp-action="Edit">Save Changes</button>
            <button type="submit" class="btn btn-danger" asp-area="" asp-controller="AdminBlogs" asp-action="Delete" asp-route-id="@Model.Id">Delete Post</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var editorText = new FroalaEditor('#content', {
            imageUploadURL: '/api/imageapi'
        });

        const selectedImage = document.querySelector("#thumbnailImage");
        const image = document.querySelector("#image");
        const imageDisplay = document.querySelector("#imageDisplay");

        async function uploadImage(e) {
            console.log(e.target.files[0])

            let data = new FormData();
            data.append('imageFile', e.target.files[0]);

            await fetch('/api/imageapi', {
                method: 'POST',
                headers: {
                    'Aceept': '*/*'
                },
                body: data
            }).then(response => response.json())
                .then(result => {
                    console.log(result)
                    image.value = result.link;
                    imageDisplay.src = result.link;
                    imageDisplay.style.display = 'block';
                });
        }

        selectedImage.addEventListener('change', uploadImage);

    </script>

}